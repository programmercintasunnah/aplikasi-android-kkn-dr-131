<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF0F1"
    tools:context=".MainActivity">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="200sp"
       android:background="@color/hijau_uin">
       <ImageView
           android:layout_width="80sp"
           android:layout_height="80sp"
           android:src="@drawable/uin"
           android:layout_marginTop="50sp"
           android:layout_centerHorizontal="true"
           android:background="@drawable/radius_oval"
           ></ImageView>
   </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:layout_marginTop="150sp"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:background="@drawable/radius_box">
        <ImageView
            android:id="@+id/ivKkn"
            android:layout_width="100sp"
            android:layout_height="150sp"
            android:src="@drawable/kkn1"
            android:layout_alignParentLeft="true">
        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_toRightOf="@id/ivKkn"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:text="KKN-DR PLUS UIN SUSKA RIAU 2020"
            android:textColor="@color/hijau_kkn"
            android:textSize="24dp"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_toRightOf="@id/ivKkn"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_horizontal"
            android:text="GROUP 131"
            android:layout_marginTop="70sp"
            android:textColor="@color/hijau_uin"
            android:textSize="24dp"></TextView>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl1"
        android:layout_marginTop="20sp"
        android:layout_marginRight="25sp"
        android:layout_marginLeft="25sp"
        tools:listitem="@layout/item_dashboard"></androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>