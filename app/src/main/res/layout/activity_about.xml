<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEF0F1"
    tools:context=".About">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="220sp"
        android:background="@color/merahAbout">
        <ImageView
            android:id="@+id/imgapp"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:src="@drawable/about"
            android:layout_marginTop="30sp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/radius_oval"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Me"
            android:layout_below="@+id/imgapp"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:textSize="24sp"
            android:fontFamily="monospace"
            android:layout_marginTop="10sp"></TextView>
    </RelativeLayout>
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/rl"
        android:layout_height="wrap_content">
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@color/putih"
        app:tabIndicatorColor="@color/merahAbout"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/merahAbout"
        app:tabTextColor="@color/hitam">
    </com.google.android.material.tabs.TabLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"></androidx.viewpager.widget.ViewPager>
</LinearLayout>